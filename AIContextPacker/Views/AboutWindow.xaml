<Window x:Class="AIContextPacker.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About AI Context Packer" Height="650" Width="700"
        Background="{DynamicResource BackgroundBrush}"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <Style TargetType="Button" x:Key="PrimaryButton">
            <Setter Property="Background" Value="#FF6351B5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF7965C8"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style TargetType="Button" x:Key="SecondaryButton" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="{DynamicResource SecondaryBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource HoverBackgroundBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="40">
        <StackPanel MaxWidth="600">
            <TextBlock Text="AI Context Packer" 
                       FontSize="32" 
                       FontWeight="Bold" 
                       Foreground="{DynamicResource PrimaryBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
            
            <TextBlock Text="Version 1.0.0" 
                       FontSize="14" 
                       Foreground="{DynamicResource SecondaryTextBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"/>
            
            <Border BorderBrush="{DynamicResource BorderBrush}" 
                    BorderThickness="0,1,0,0" 
                    Padding="0,20,0,0"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="About the Developer" 
                               FontSize="20" 
                               FontWeight="SemiBold" 
                               Foreground="{DynamicResource TextBrush}"
                               Margin="0,0,0,15"/>
                    
                    <TextBlock TextWrapping="Wrap" 
                               Foreground="{DynamicResource TextBrush}"
                               LineHeight="22"
                               Margin="0,0,0,10">
                        <Run FontWeight="SemiBold">≈Åukasz Capa≈Ça</Run> - Full Stack Developer
                    </TextBlock>
                    
                    <TextBlock TextWrapping="Wrap" 
                               Foreground="{DynamicResource TextBrush}"
                               LineHeight="24"
                               Margin="0,0,0,20">
                        I turn complex challenges into intuitive software that drives your business. For two years, I have been passionately transforming complex business challenges into simple and effective software solutions. I specialize in custom web applications, from strategy and prototype through development to deployment and support.
                    </TextBlock>
                </StackPanel>
            </Border>
            
            <TextBlock Text="Connect With Me" 
                       FontSize="18" 
                       FontWeight="SemiBold" 
                       Foreground="{DynamicResource TextBrush}"
                       Margin="0,10,0,15"/>
            
            <StackPanel>
                <Button Click="OpenWebsite_Click" 
                        Style="{StaticResource SecondaryButton}"
                        HorizontalAlignment="Stretch"
                        Padding="12,8"
                        Margin="0,0,0,10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="üåê " FontSize="16" VerticalAlignment="Center"/>
                        <TextBlock Text="Website: www.capala.pl" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                
                <Button Click="OpenGitHub_Click" 
                        Style="{StaticResource SecondaryButton}"
                        HorizontalAlignment="Stretch"
                        Padding="12,8"
                        Margin="0,0,0,10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="üíª " FontSize="16" VerticalAlignment="Center"/>
                        <TextBlock Text="GitHub: github.com/TheLukCraft" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                
                <Button Click="OpenYouTube_Click" 
                        Style="{StaticResource SecondaryButton}"
                        HorizontalAlignment="Stretch"
                        Padding="12,8"
                        Margin="0,0,0,10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="üì∫ " FontSize="16" VerticalAlignment="Center"/>
                        <TextBlock Text="YouTube: @capalapl" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                
                <Button Click="OpenTikTok_Click" 
                        Style="{StaticResource SecondaryButton}"
                        HorizontalAlignment="Stretch"
                        Padding="12,8"
                        Margin="0,0,0,10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="üéµ " FontSize="16" VerticalAlignment="Center"/>
                        <TextBlock Text="TikTok: @capalapl" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
            
            <Border BorderBrush="{DynamicResource BorderBrush}" 
                    BorderThickness="0,1,0,0" 
                    Padding="0,20,0,0"
                    Margin="0,30,0,0">
                <StackPanel>
                    <TextBlock Text="About This Application" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               Foreground="{DynamicResource TextBrush}"
                               Margin="0,0,0,10"/>
                    
                    <TextBlock TextWrapping="Wrap" 
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               LineHeight="22">
                        AI Context Packer is an open-source tool designed to help developers efficiently prepare their codebase for AI assistants. Built with WPF and .NET 9, it provides an intuitive interface for managing and packaging code context.
                    </TextBlock>
                </StackPanel>
            </Border>
            
            <Button Content="Close" 
                    Click="Close_Click"
                    HorizontalAlignment="Center"
                    MinWidth="120"
                    Padding="12,6"
                    Margin="0,30,0,0"
                    Style="{StaticResource PrimaryButton}"/>
        </StackPanel>
    </ScrollViewer>
</Window>

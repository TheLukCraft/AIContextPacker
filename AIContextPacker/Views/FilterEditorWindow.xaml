<Window x:Class="AIContextPacker.Views.FilterEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Filter Editor" Height="400" Width="600"
        Background="{DynamicResource BackgroundBrush}"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <DockPanel Margin="20">
        <StackPanel DockPanel.Dock="Bottom" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="Save" 
                    Click="Save_Click"
                    MinWidth="100"
                    Padding="15,8"
                    Margin="0,0,10,0"/>
            <Button Content="Cancel" 
                    Click="Cancel_Click"
                    MinWidth="100"
                    Padding="15,8"/>
        </StackPanel>

        <StackPanel>
            <TextBlock Text="Filter Name:" 
                       Margin="0,0,0,5"
                       Foreground="{DynamicResource TextBrush}"/>
            <TextBox x:Name="NameTextBox" 
                     Padding="8"
                     Margin="0,0,0,20"/>

            <TextBlock Text="Patterns (one per line, gitignore format):" 
                       Margin="0,0,0,5"
                       Foreground="{DynamicResource TextBrush}"/>
            <TextBox x:Name="PatternsTextBox" 
                     Height="200"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     FontFamily="Consolas"
                     Padding="8"/>
        </StackPanel>
    </DockPanel>
</Window>
